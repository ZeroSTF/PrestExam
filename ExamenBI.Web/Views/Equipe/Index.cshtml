@model IEnumerable<ExamenBI.Domain.Entities.Equipe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<fieldset>
    <legend>Search By:</legend>
    <form asp-action="index">
        <label for="filter">Filter</label>
        <input type="text" name="filter" />
        <input type="submit" value="Search" />
    </form>
</fieldset>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EquipeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdresseLocal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomEquipe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EquipeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdresseLocal)
            </td>
            <td>
                <img src="~/uploads/@item.Logo"  width="40" height="40"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomEquipe)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
